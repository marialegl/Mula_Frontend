<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".client.Bottom_Nav_Fragments_Client.FragmentStoreC">

    <!-- Include fragment -->
    <include
        layout="@layout/fragment_home_c"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Include toolbar -->
    <include
        layout="@layout/toolbar"
        app:layout_constraintTop_toBottomOf="@+id/fragment_home_c"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />



        <!-- Título -->
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Explore Our Tools"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp" />

        <!-- Contenedor de los rectángulos -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/gridContainer"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="16dp">

            <!-- Rectángulo 1 -->
            <LinearLayout
                android:id="@+id/rect1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/rect_background"
                app:layout_constraintWidth_percent="0.3"
                app:layout_constraintHeight_percent="0.4"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/sample_image"
                    android:contentDescription="Image 1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tool 1"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:gravity="center" />
            </LinearLayout>

            <!-- Rectángulo 2 -->
            <LinearLayout
                android:id="@+id/rect2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/rect_background"
                app:layout_constraintWidth_percent="0.3"
                app:layout_constraintHeight_percent="0.4"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/rect1"
                app:layout_constraintEnd_toStartOf="@id/rect3">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/sample_image"
                    android:contentDescription="Image 2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tool 2"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:gravity="center" />
            </LinearLayout>

            <!-- Rectángulo 3 -->
            <LinearLayout
                android:id="@+id/rect3"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/rect_background"
                app:layout_constraintWidth_percent="0.3"
                app:layout_constraintHeight_percent="0.4"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/sample_image"
                    android:contentDescription="Image 3" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tool 3"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:gravity="center" />
            </LinearLayout>

            <!-- Repetir para la segunda fila -->

            <!-- Rectángulo 4 -->
            <LinearLayout
                android:id="@+id/rect4"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/rect_background"
                app:layout_constraintWidth_percent="0.3"
                app:layout_constraintHeight_percent="0.4"
                app:layout_constraintTop_toBottomOf="@id/rect1"
                app:layout_constraintStart_toStartOf="parent">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/sample_image"
                    android:contentDescription="Image 4" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tool 4"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:gravity="center" />
            </LinearLayout>

            <!-- Rectángulo 5 -->
            <LinearLayout
                android:id="@+id/rect5"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/rect_background"
                app:layout_constraintWidth_percent="0.3"
                app:layout_constraintHeight_percent="0.4"
                app:layout_constraintTop_toBottomOf="@id/rect2"
                app:layout_constraintStart_toEndOf="@id/rect4"
                app:layout_constraintEnd_toStartOf="@id/rect6">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/sample_image"
                    android:contentDescription="Image 5" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tool 5"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:gravity="center" />
            </LinearLayout>

            <!-- Rectángulo 6 -->
            <LinearLayout
                android:id="@+id/rect6"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/rect_background"
                app:layout_constraintWidth_percent="0.3"
                app:layout_constraintHeight_percent="0.4"
                app:layout_constraintTop_toBottomOf="@id/rect3"
                app:layout_constraintEnd_toEndOf="parent">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/sample_image"
                    android:contentDescription="Image 6" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tool 6"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:gravity="center" />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>



</FrameLayout>