<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyAccountActivity">

    <!-- Include fragment -->
    <include
        layout="@layout/fragment_home_s"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/gridContainer"
        android:layout_width="350dp"
        android:layout_height="550dp"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/white">

    <!-- Top bar with back arrow and title -->
        <LinearLayout
            android:id="@+id/topBar"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:gravity="center_vertical"
            android:background="#ffffff"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/backArrow"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/avatar_placeholder"
                android:contentDescription="Back"
                android:layout_marginEnd="16dp" />

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My store"
                android:textSize="20sp"
                android:textColor="#000000" />
        </LinearLayout>

        <!-- ScrollView to hold the content -->
        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/topBar">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

            <!-- User Info -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/userImage"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginEnd="16dp"
                    android:contentDescription="User Profile"
                    android:src="@drawable/avatar_placeholder" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/userName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-medium"
                        android:text="Mansi Shah"
                        android:textColor="#000000"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/userEmail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="mansishah2603@gmail.com"
                        android:textColor="#757575"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Contenedor de los rectángulos -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/gridContainer"
                android:layout_width="350dp"
                android:layout_height="350dp"
                android:layout_gravity="center"
                android:layout_margin="16dp"
                android:layout_marginTop="200dp"
                android:background="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/toolbar">

                <!-- Rectángulo 1 -->
                <LinearLayout
                    android:id="@+id/rect1"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginVertical="16dp"
                    android:background="@drawable/rectangle_border"
                    android:gravity="center"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toStartOf="@id/rect2"
                    app:layout_constraintHeight_percent="0.3"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintWidth_percent="0.45">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:contentDescription="Image 1"
                        android:src="@drawable/image" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Tool 1"
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                </LinearLayout>

                <!-- Rectángulo 2 -->
                <LinearLayout
                    android:id="@+id/rect2"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginVertical="16dp"
                    android:background="@drawable/rectangle_border"
                    android:gravity="center"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHeight_percent="0.3"
                    app:layout_constraintStart_toEndOf="@id/rect1"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintWidth_percent="0.45">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:contentDescription="Image 2"
                        android:src="@drawable/image" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Tool 2"
                        android:textColor="@color/black"
                        android:textSize="12sp" />
                </LinearLayout>

                <!-- Rectángulo 3 -->
                <LinearLayout
                    android:id="@+id/rect3"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginVertical="16dp"
                    android:background="@drawable/rectangle_border"
                    android:gravity="center"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toStartOf="@id/rect4"
                    app:layout_constraintHeight_percent="0.3"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/rect1"
                    app:layout_constraintWidth_percent="0.45">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:contentDescription="Image 3"
                        android:src="@drawable/image" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Tool 3"
                        android:textColor="@color/black"
                        android:textSize="12sp" />
                </LinearLayout>

                <!-- Rectángulo 4 -->
                <LinearLayout
                    android:id="@+id/rect4"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginVertical="16dp"
                    android:background="@drawable/rectangle_border"
                    android:gravity="center"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHeight_percent="0.3"
                    app:layout_constraintStart_toEndOf="@id/rect3"
                    app:layout_constraintTop_toBottomOf="@id/rect2"
                    app:layout_constraintWidth_percent="0.45">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:contentDescription="Image 4"
                        android:src="@drawable/image" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Tool 4"
                        android:textColor="@color/black"
                        android:textSize="12sp" />
                </LinearLayout>

                <!-- Rectángulo 5 -->
                <LinearLayout
                    android:id="@+id/rect5"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginVertical="16dp"
                    android:background="@drawable/rectangle_border"
                    android:gravity="center"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toStartOf="@id/rect6"
                    app:layout_constraintHeight_percent="0.3"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/rect3"
                    app:layout_constraintWidth_percent="0.45">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:contentDescription="Imagen 5"
                        android:src="@drawable/image" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Tool 5"
                        android:textColor="@color/black"
                        android:textSize="12sp" />
                </LinearLayout>

                <!-- Rectángulo 6 -->
                <LinearLayout
                    android:id="@+id/rect6"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginVertical="16dp"
                    android:background="@drawable/rectangle_border"
                    android:gravity="center"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHeight_percent="0.3"
                    app:layout_constraintStart_toEndOf="@id/rect5"
                    app:layout_constraintTop_toBottomOf="@id/rect4"
                    app:layout_constraintWidth_percent="0.45">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:contentDescription="Imagen 6"
                        android:src="@drawable/image" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Tool 6"
                        android:textColor="@color/black"
                        android:textSize="12sp" />
                </LinearLayout>

                <!-- Rectángulo 7 -->
                <LinearLayout
                    android:id="@+id/rect7"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginVertical="16dp"
                    android:background="@drawable/rectangle_border"
                    android:gravity="center"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toStartOf="@id/rect8"
                    app:layout_constraintHeight_percent="0.3"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/rect5"
                    app:layout_constraintWidth_percent="0.45">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:contentDescription="Imagen 7"
                        android:src="@drawable/image" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Tool 7"
                        android:textColor="@color/black"
                        android:textSize="12sp" />
                </LinearLayout>

                <!-- Rectángulo 8 -->
                <LinearLayout
                    android:id="@+id/rect8"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginVertical="16dp"
                    android:background="@drawable/rectangle_border"
                    android:gravity="center"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHeight_percent="0.3"
                    app:layout_constraintStart_toEndOf="@id/rect7"
                    app:layout_constraintTop_toBottomOf="@id/rect6"
                    app:layout_constraintWidth_percent="0.45">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:contentDescription="Imagen 8"
                        android:src="@drawable/image" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Tool 8"
                        android:textColor="@color/black"
                        android:textSize="12sp" />
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
